<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.narku.a2010kidsshowquiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kids_show_trivia_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kids_show_trivia_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name="com.narku.a2010kidsshowquiz.EndActivity" />
        <activity android:name="com.narku.a2010kidsshowquiz.InfoActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.narku.a2010kidsshowquiz.QuizActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.narku.a2010kidsshowquiz.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>